<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="meter_image-1" author="ankit">
        <createTable tableName="meter_images">
            <column name="images_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="meter_images_pkey"/>
            </column>
            <column name="images_path" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="meter_reading_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="meter_image-2" author="ankit">
        <addForeignKeyConstraint
                baseTableName="meter_images"
                baseColumnNames="meter_reading_id"
                referencedTableName="meter_reading"
                referencedColumnNames="id"
                constraintName="fk_meter_image_meter_reading"/>
    </changeSet>

    <changeSet id="meter_image-3" author="ankit">
        <sql dbms="postgresql">
            ALTER SEQUENCE ${schema}.meter_images_images_id_seq RESTART WITH 100000;
        </sql>
    </changeSet>

</databaseChangeLog>
